// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model berdasarkan tabel SISWA dari PDF
model SISWA {
  nis       String    @id @db.VarChar(255) 
  nm_siswa  String
  tmp_lahir String?
  tgl_lahir DateTime? @db.Date
  jkel      String?   @db.VarChar(1) 
  alamat    String?
  telp      String?
  nm_wali   String?
  username  String    @unique
  password  String
  
  kd_kelas  String
  kelas     KELAS     @relation(fields: [kd_kelas], references: [kd_kelas])

  absen     ABSEN[]
  nilai     NILAI[]
}

model GURU {
  nip            String    @id @db.VarChar(255)
  nm_guru        String
  tmp_lahir_guru String?
  tgl_lahir_guru DateTime? @db.Date
  kel_guru       String?   @db.VarChar(1)
  alamat         String?
  telp           String?
  
  kd_matpel      String
  matpel         MATPEL    @relation(fields: [kd_matpel], references: [kd_matpel])
}

model KELAS {
  kd_kelas    String  @id @db.VarChar(255)
  nm_kelas    String
  jml_siswa   Int?
  thn_ajaran  String?
  
  siswa       SISWA[]
}

model MATPEL {
  kd_matpel  String @id @db.VarChar(255)
  nm_matpel  String
  
  guru       GURU[]

  nilai      NILAI[]
}

model NILAI {
  kd_nilai      String  @id @db.VarChar(255)
  uts_sem_ganjil Int?
  uas_sem_ganjil Int?
  uts_sem_genap  Int?
  uas_sem_genap  Int?

  nis           String
  siswa         SISWA  @relation(fields: [nis], references: [nis])

  kd_matpel     String
  matpel        MATPEL @relation(fields: [kd_matpel], references: [kd_matpel])
}

model ABSEN {
  kd_absen  String  @id @db.VarChar(255)
  nm_bulan  String?
  jml_hadir Int?
  alfa      Int?
  izin      Int?
  sakit     Int?

  nis       String
  siswa     SISWA  @relation(fields: [nis], references: [nis])
}

model ADMIN {
  username String @id @db.VarChar(255)
  password String
  nama     String?
}